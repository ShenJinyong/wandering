<assembly>
    <id>pre</id><!--输出文件名-->
    <formats>
        <format>tar.gz</format><!--打包文件结构-->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory><!--项目文件目录-->
            <outputDirectory>wandering/bin</outputDirectory><!--生成bin目录-->
            <directoryMode>0755</directoryMode><!--目录执行权限-->
            <fileMode>0755</fileMode><!--文件执行权限-->
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/dev/config</directory>
            <outputDirectory>wandering/config</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/static</directory>
            <outputDirectory>wandering/static</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>wandering/lib</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>wandering/logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>wandering</outputDirectory>
            <excludes>
                <exclude>/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>readme.txt</include>
                <include>banner.txt</include>
            </includes>
            <outputDirectory>wandering</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>wandering/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>